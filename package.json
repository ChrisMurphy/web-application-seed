{
  "name": "webapplicationseed",
  "version": "1.0.0",
  "description": "StepChange Angular2 Application Seed",
  "main": "index.html",
  "scripts": {
    "preinstall": "npm install -g webdriver-manager rimraf",
    "postinstall": "typings install",
    "start": "webpack-dev-server --config config/webpack.dev.js --progress --colors --watch --inline",
    "start:prod": "webpack-dev-server --config config/webpack.prod.js --progress --colors --watch --inline --port 9090",
    "clean:build": "rimraf -- dist",
    "clean:automation": "rimraf -- automation",
    "clean:dependencies": "npm uninstall rimraf && rimraf -- node_modules typings",
    "clean:install": "npm run clean:dependencies && npm install",
    "pretest": "rimraf coverage",
    "test": "karma start config/karma.conf.js",
    "posttest": "npm run remaphtml && npm run coverage",
    "remaphtml": "remap-istanbul -i coverage/json/coverage-final.json -o coverage -t html",
    "coverage": "http-server -c-1 -o -p 9875 ./coverage",
    "pree2e": "webdriver-manager update --standalone && npm run clean:automation",
    "e2e": "protractor config/protractor.conf.js  --baseUrl=\"http://localhost:9090\"",
    "e2e:ci": "parallelshell \"npm run start:prod\" \"npm run e2e\"",
    "webpack:build": "webpack --config config/webpack.prod.js",
    "build": "npm run clean:build && npm run webpack:build",
    "automation": "http-server -c-1 -o -p 9875 ./automation"
  },
  "repository": {
    "type": "git",
    "url": "http://fcctfs:8080/tfs/tfssandpit/FrontEndApplications/_git/WebApplicationSeed"
  },
  "author": "StepChange",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "2.0.0-rc.3",
    "@angular/compiler": "2.0.0-rc.3",
    "@angular/core": "2.0.0-rc.3",
    "@angular/platform-browser": "2.0.0-rc.3",
    "@angular/platform-browser-dynamic": "2.0.0-rc.3",
    "core-js": "^2.4.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "codelyzer": "0.0.23",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.21.0",
    "http-server": "^0.9.0",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine": "2.3.2",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "node-sass": "^3.8.0",
    "null-loader": "^0.1.1",
    "parallelshell": "^2.0.0",
    "postcss-loader": "^0.9.1",
    "protractor": "^3.3.0",
    "protractor-jasmine2-html-reporter": "0.0.6",
    "raw-loader": "^0.5.1",
    "remap-istanbul": "^0.6.4",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.1",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "ts-node": "^0.9.1",
    "tslint": "^3.11.0",
    "tslint-loader": "^2.1.5",
    "typescript": "^1.8.10",
    "typings": "^1.1.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.14.0",
    "webpack-notifier": "^1.3.0"
  }
}
